{
  "name": "electron-image-resizer",
  "productName": "ImageResizer",
  "version": "1.0.0",
  "description": "App to resize dimensions of the image.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch . --exec \"electron .\"",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always"
  },
  "repository": "https://github.com/Sholastix/electron-image-resizer",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "directories": {
      "output": "dist"
    },
    "appId": "ImageResizer",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/icon.ico"
    },
    "nsis": {
      "artifactName": "ImageResizer-1.0.0.exe",
      "oneClick": "false",
      "installerIcon": "assets/icons/icon.ico",
      "uninstallerIcon": "assets/icons/icon.ico",
      "uninstallDisplayName": "ImageResizer",
      "license": "license.md",
      "allowToChangeInstallationDirectory": "true"
    }
  },
  "author": "Sholastix",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-log": "^5.2.0",
    "electron-updater": "^6.3.4",
    "jimp": "^0.22.12",
    "toastify-js": "^1.12.0"
  },
  "devDependencies": {
    "electron": "^32.0.1",
    "electron-builder": "^25.0.5",
    "nodemon": "^3.1.4"
  }
}
